{% comment %}
  ============================================
  THE SWEET TOOTH - FINAL CTA
  ============================================
  
  "Ready to Make Someone's Day?" closing CTA
  
============================================
{% endcomment %}

<section class="st-final-cta">
  <div class="st-final-cta__container page-width">
    <h2 class="st-final-cta__headline">{{ section.settings.headline }}</h2>
    
    {%- if section.settings.subheadline != blank -%}
      <p class="st-final-cta__subheadline">{{ section.settings.subheadline }}</p>
    {%- endif -%}
    
    <div class="st-final-cta__buttons">
      {%- if section.settings.primary_cta_text != blank -%}
        <a href="{{ section.settings.primary_cta_link }}" class="st-btn-primary st-btn-primary--large">
          {{ section.settings.primary_cta_text }}
        </a>
      {%- endif -%}
      
      {%- if section.settings.secondary_cta_text != blank -%}
        <a href="{{ section.settings.secondary_cta_link }}" class="st-final-cta__secondary">
          {{ section.settings.secondary_cta_text }} â†’
        </a>
      {%- endif -%}
    </div>
  </div>
</section>

<style>
  .st-final-cta {
    padding: 100px 20px;
    background: linear-gradient(135deg, var(--st-pink-light, #FCE4EC) 0%, #FFF0F5 100%);
    text-align: center;
  }
  
  .st-final-cta__container {
    max-width: 700px;
    margin: 0 auto;
  }
  
  .st-final-cta__headline {
    font-family: var(--st-font-display, system-ui);
    font-size: clamp(32px, 5vw, 48px);
    font-weight: 600;
    color: var(--st-charcoal, #1D1D1F);
    line-height: 1.2;
    margin: 0 0 16px 0;
  }
  
  .st-final-cta__subheadline {
    font-family: var(--st-font-body, system-ui);
    font-size: 18px;
    color: var(--st-text-secondary, #6E6E73);
    margin: 0 0 40px 0;
  }
  
  .st-final-cta__buttons {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
  }
  
  .st-btn-primary--large {
    padding: 20px 48px;
    font-size: 18px;
    min-width: 280px;
  }
  
  .st-final-cta__secondary {
    font-family: var(--st-font-body, system-ui);
    font-size: 16px;
    color: var(--st-text-secondary, #6E6E73);
    text-decoration: none;
    transition: color var(--st-transition-fast, 150ms ease);
  }
  
  .st-final-cta__secondary:hover {
    color: var(--st-pink, #F06292);
  }
  
  @media (max-width: 768px) {
    .st-final-cta {
      padding: 60px 20px;
    }
    
    .st-btn-primary--large {
      width: 100%;
      max-width: 320px;
    }
  }
</style>

{% schema %}
{
  "name": "Sweet Tooth Final CTA",
  "tag": "section",
  "class": "st-final-cta-section",
  "settings": [
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "Ready to Make Someone's Day?"
    },
    {
      "type": "text",
      "id": "subheadline",
      "label": "Subheadline",
      "default": "Build a custom gift basket they'll never forget."
    },
    {
      "type": "header",
      "content": "Primary CTA"
    },
    {
      "type": "text",
      "id": "primary_cta_text",
      "label": "Button Text",
      "default": "Start Building Your Gift"
    },
    {
      "type": "url",
      "id": "primary_cta_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Secondary CTA"
    },
    {
      "type": "text",
      "id": "secondary_cta_text",
      "label": "Link Text",
      "default": "Or browse our treats"
    },
    {
      "type": "url",
      "id": "secondary_cta_link",
      "label": "Link URL"
    }
  ],
  "presets": [
    {
      "name": "Sweet Tooth Final CTA"
    }
  ]
}
{% endschema %}
